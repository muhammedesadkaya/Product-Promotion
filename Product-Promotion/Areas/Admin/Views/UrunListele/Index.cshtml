
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model catiga.Models.ORM.Entity.Product

<div class="col-xs-12" style="margin-top:20px;">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Ürün Listesi</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th style="width:70px;">ID</th>
                        <th style="width:70px;">Ürün İsmi</th>
                        
                        <th style="width:70px;">Tipi</th>
                        <th style="width:70px;">Hane</th>
                        <th style="width:70px;">İçerik</th>
                        <th style="width:70px;">Eklenme Tarihi</th>
                        <th style="width:70px;">İşlem</th>
                    </tr>
                    @foreach (var item in Model.Products)
                    {
                    <tr id="a_@item.ID">
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        
                        <td>@item.Type</td>
                        <td>@item.Digit</td>
                        <td>@item.Description</td>
                        <td>@item.AddDate</td>
                        <td> <a href="#" class="btn btn-link" onclick="Delete('/Admin/UrunListele/DeleteUrun/',@item.ID)"><i class="fa fa-trash" aria-hidden="true" style="font-size:20px; margin-top:-10px; margin-left:-5px;"></i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>



@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@model catiga.Models.ORM.Entity.Product

<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Ürün Ekle</h3>
    </div>
    @using (Html.BeginForm("UrunEkle", "UrunEkle", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="box-body">
            <div class="form-group">
                <label>Ürün İsmi</label>
                @Html.TextBoxFor(x => x.Name, new {@class= "form-control", @placeholder = "Ürün İsmi", @required="required" })
            </div>
            <div class="form-group">
                <label>Hane</label>
                @Html.TextBoxFor(x => x.Digit, new { @class = "form-control", @placeholder = "12 veya 14 yazınız.", @required = "required" })
            </div>
            <div class="form-group">
                <label>Tip</label>
                @Html.TextBoxFor(x => x.Type, new { @class = "form-control", @placeholder = "Masa,Cep veya Bilimsel", @required = "required" })
            </div>

            <div class="form-group">
                <label>Ürün İçeriği</label>
                @Html.TextAreaFor(x => x.Description, new { @class="form-control", @placeholder="Buraya ürün içeriği giriniz.", @required = "required" })
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Fotoğraf</label>
                <input name="exampleInputFile" type="file" id="exampleInputFile" accept="image/gif, image/jpeg, image/png">
            </div>
        </div>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
        </div>
    }
</div>

